{
  "name": "@open-mail-archive/users-scheduler",
  "version": "1.0.0",
  "description": "Microservice from the scheduler component of the app, responsible for generating jobs related to user accounts.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "prod": "node ./dist/index.js",
    "clean": "rimraf dist",
    "prepare": "husky install",
    "format": "prettier --ignore-path .gitignore --write ./",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "dev": "NODE_OPTIONS='--no-warnings --loader ts-node/esm' nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node ./src/index.ts",
    "start": "NODE_OPTIONS='--experimental-specifier-resolution=node' node dist/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:dev": "NODE_OPTIONS=--experimental-vm-modules jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Open-Mail-Archive/users-scheduler.git"
  },
  "keywords": [],
  "author": "Mircea-Pavel ANTON (Michael Anthony)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Open-Mail-Archive/users-scheduler/issues"
  },
  "homepage": "https://github.com/Open-Mail-Archive/users-scheduler#readme",
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0",
    "husky": "^7.0.0",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4"
  }
}
